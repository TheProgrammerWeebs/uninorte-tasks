<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="themeDark">
        <item name="android:colorControlNormal">@color/light</item>
        <item name="android:colorControlActivated">@color/light</item>
    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TasksTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/darkRed</item>
        <item name="colorPrimaryDark">#df4340</item>
        <item name="colorAccent">@color/darkRed</item>
    </style>

    <style name="CategoriesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">#22b3c6</item>
        <item name="colorAccent">@color/cyan</item>
    </style>

    <style name="ForTodayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">#6e47b2</item>
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/flyingowl</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

</resources>
